<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="hurraa_test" transaction-type="RESOURCE_LOCAL">

        <class>org.cejug.hurraa.entity.inventario.Fabricante</class>

        <properties>
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hurraa_test"></property>
            <property name="javax.persistence.jdbc.user" value="hurraa"></property>
            <property name="javax.persistence.jdbc.password" value="hurraa"></property>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>

    </persistence-unit>

</persistence>
